<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="text_basic">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_menu" parent="text_basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t20sp</item>
    </style>
    <style name="text_menu2" parent="text_menu">
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:textSize">@dimen/t18sp</item>
    </style>
    <style name="text_menu2.MP">
        <item name="android:padding">@dimen/t10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="basicIcon">
        <item name="android:layout_width">@dimen/t50dp</item>
        <item name="android:layout_height">@dimen/t50dp</item>
        <item name="android:padding">@dimen/t5dp</item>
    </style>

    <style name="storageItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/t10dp</item>
        <item name="android:textColor">#ddd</item>
        <item name="android:background">@drawable/bg_sky</item>
        <item name="android:gravity">center</item>
    </style>
</resources>